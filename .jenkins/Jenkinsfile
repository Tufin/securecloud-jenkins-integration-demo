pipeline {
    agent any
    stages {
        stage('build go code') {
            steps {
                sh 'echo "go build ./..."'
                sh 'sleep 5'
            }
        }
        stage('build docker image'){
            steps {
                sh 'echo "docker build my-image"'
                sh 'sleep 5'
            }
        }
        stage('SecureCloud workload security check'){
            environment {
                TUFIN_API_ACCESS_KEY = credentials('jenkins-securecloud-api-access-key')
                filename = '${env.WORKSPACE}/k8s/app.yaml'
            }
            steps {
                script {
                    final String url = "https://nir.securecloudtestnir.tufin.io/api/v1/orca/model/cross-cluster/workload-risks"
                    final def (String response, int code) =
                        sh(script: "curl -X POST -s -w '\\n%{response_code}' $url -H 'Authorization: Bearer $TUFIN_API_ACCESS_KEY' -H 'Content-Type: application/octet-stream' --data-binary '@$filename'", returnStdout: true)
                            .trim()
                            .tokenize("\n")
                    echo "HTTP response status code: $code"
                    echo response
                }
            }
        }
    }
}
